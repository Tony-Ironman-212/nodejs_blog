<div class="mt-4">
  <a href="/me/stored/courses">Quay lại danh sách khóa học</a>
  <h1>Khóa học đã xóa</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Tên khóa học</th>
        <th scope="col">Trình độ</th>
        <th scope="col" colspan="2">Thời gian xóa</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
      <tr>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{ this.name }}</td>
        <td>{{ this.level }}</td>
        <td>{{ this.deletedAt }}</td>
        <td>
          <a href="" class="btn btn-link btn-restore" data-id="{{ this._id }}"
            >Khôi phục</a
          >
          <a
            href="#"
            class="btn btn-link"
            data-bs-toggle="modal"
            data-bs-target="#delete-course-modal"
            data-id="{{ this._id }}"
            >Xóa vĩnh viễn</a
          >
        </td>
      </tr>
      {{else}}
      <tr>
        <td colspan="5" class="text-center">
          Thùng rác trống =>
          <a href="/me/stored/courses">Quay lại danh sách khóa học</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{!-- confirm delete course --}}
<div id="delete-course-modal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xác nhận xóa khóa học!!!</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p>
          Không thể khôi phục sau khi xóa. Bạn chắc chắn muốn xóa đúng không?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Hủy
        </button>
        <button id="btn-delete-course" type="button" class="btn btn-danger">
          Xóa vĩnh viễn
        </button>
      </div>
    </div>
  </div>
</div>

{{!-- hidden form for DELETE --}}
<form name="delete-course-form" method="POST"></form>

{{!-- hidden form for PATCH --}}
<form name="restore-course-form" method="POST"></form>

{{!-- script cho modal --}}
<script>
  const deleteCourseModal = document.getElementById('delete-course-modal');
  const deleteButtons = document.querySelectorAll('#btn-delete-course');
  const restoreButtons = document.querySelectorAll('.btn-restore');
  var courseId;
  var deleteForm = document.forms['delete-course-form'];
  var restoreForm = document.forms['restore-course-form'];

  if (deleteCourseModal) {
    deleteCourseModal.addEventListener('show.bs.modal', (event) => {
      const button = event.relatedTarget;
      courseId = button.getAttribute('data-id');
    });
  }

  //delete logic
  if (deleteButtons) {
    deleteButtons.forEach((button) => {
      button.addEventListener('click', (event) => {
        deleteForm.action = '/courses/' + courseId + '/force?_method=DELETE';
        deleteForm.submit();
      });
    });
  }

  //restore logic
  if (restoreButtons) {
    restoreButtons.forEach((button) => {
      button.addEventListener('click', (event) => {
        event.preventDefault(); // Prevent default link behavior
        courseId = button.getAttribute('data-id');
        restoreForm.action = '/courses/' + courseId + '/restore?_method=PATCH';
        restoreForm.submit();
      });
    });
  }
</script>
