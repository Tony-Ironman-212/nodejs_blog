<form
  name="container-form"
  class="mt-4"
  method="POST"
  action="/courses/handle-form-action"
>
  <h1>Khóa học của tôi</h1>
  <a href="/me/trash/courses">Thùng rác ({{ deletedCount }})</a>
  <div class="mt-4 d-flex align-items-center">
    <div class="form-check">
      <input
        class="form-check-input"
        type="checkbox"
        value=""
        id="checkbox-all"
      />
      <label class="form-check-label" for="checkbox-all"> Chọn tất cả </label>
    </div>

    <select
      class="form-select form-select-sm checkbox-select-all-options"
      name="action"
      aria-label="Default select example"
      required
    >
      <option value="">--Hành động--</option>
      <option value="delete">Xóa</option>
    </select>

    <button class="delete-all-btn btn btn-primary btn-sm disabled">
      Thực hiện
    </button>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col" colspan="2">#</th>
        <th scope="col">Tên khóa học</th>
        <th scope="col">Trình độ</th>
        <th scope="col" colspan="2">Thời gian tạo</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
      <tr>
        <td>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value="{{ this._id }}"
              name="courseIds[]"
            />
          </div>
        </td>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{ this.name }}</td>
        <td>{{ this.level }}</td>
        <td>{{ this.createdAt }}</td>
        <td>
          <a href="/courses/{{ this._id }}/edit" class="btn btn-link">Sửa</a>
          <a
            href="#"
            class="btn btn-link"
            data-bs-toggle="modal"
            data-bs-target="#delete-course-modal"
            data-id="{{ this._id }}"
            >Xóa</a
          >
        </td>
      </tr>
      {{else}}
      <tr>
        <td colspan="5" class="text-center">
          Bạn chưa đăng khóa học nào =>
          <a href="/courses/create">Đăng khóa học</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</form>

{{!-- confirm delete course --}}
<div id="delete-course-modal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xác nhận xóa khóa học!!!</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p>Bạn chắc chắn muốn xóa đúng không?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Hủy
        </button>
        <button id="btn-delete-course" type="button" class="btn btn-danger">
          Xóa
        </button>
      </div>
    </div>
  </div>
</div>

{{!-- hidden form for DELETE --}}
<form name="delete-course-form" method="POST"></form>

{{!-- script cho modal --}}
<script>
  const containerForm = document.forms['container-form'];
  const deleteCourseModal = document.getElementById('delete-course-modal');
  const deleteButton = document.getElementById('btn-delete-course');
  const deleteAllButton = document.querySelector('.delete-all-btn');
  var courseId;
  var deleteForm = document.forms['delete-course-form'];
  const checkboxAll = document.getElementById('checkbox-all');
  const courseItemCheckboxes = document.querySelectorAll(
    'input[type="checkbox"][name="courseIds[]"]',
  );

  if (deleteCourseModal) {
    deleteCourseModal.addEventListener('show.bs.modal', (event) => {
      const button = event.relatedTarget;
      courseId = button.getAttribute('data-id');
    });
  }

  if (deleteButton) {
    deleteButton.addEventListener('click', (event) => {
      deleteForm.action = '/courses/' + courseId + '?_method=DELETE';
      deleteForm.submit();
    });
  }

  //checkbox all change
  if (checkboxAll) {
    checkboxAll.addEventListener('change', (event) => {
      const isChecked = event.target.checked;
      courseItemCheckboxes.forEach((checkbox) => {
        checkbox.checked = isChecked;
      });
      toggleDeleteAllButton();
    });
  }

  //khi một trong courseItemCheckboxes change
  courseItemCheckboxes.forEach((checkbox) => {
    checkbox.addEventListener('change', (event) => {
      const isAllChecked = Array.from(courseItemCheckboxes).every(
        (checkbox) => checkbox.checked,
      );
      checkboxAll.checked = isAllChecked;
      toggleDeleteAllButton();
    });
  });

  //toggle delete all button function
  function toggleDeleteAllButton() {
    const isAnyChecked = Array.from(courseItemCheckboxes).some(
      (checkbox) => checkbox.checked,
    );
    deleteAllButton.classList.toggle('disabled', !isAnyChecked);
  }

  //delete all button click, ngăn submit khi chưa đủ điều kiện
  deleteAllButton.addEventListener('click', (event) => {
    //isDisabled = deleteAllButton.classList.contains('disabled');
    //if (isDisabled) {
    //event.preventDefault();
    //}
  });
</script>
